$(document).ready(function() {
 
  var owl = $("#owl-hot");
 
  owl.owlCarousel({
    slideSpeed : 300,
    paginationSpeed : 400,
    autoPlay: 3000,
    stopOnHover: true,
    pagination: false,
    items: 5
  });
 
  // Custom Navigation Events
  $(".owl-hot-next").click(function(){
    owl.trigger('owl.next');
  })
  $(".owl-hot-prev").click(function(){
    owl.trigger('owl.prev');
  })
});

