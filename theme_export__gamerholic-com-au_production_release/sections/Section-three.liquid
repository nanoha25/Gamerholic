<div class="container padding-top">
<div class="hometabletcg" style="margin:0px 0">
	<div class="col-xs-12 no-gutter main_div" style="background:#292929">

		<div class="col-md-12 col-lg-4 no-gutter">
          <h2 class="center heading_font" style="text-align:center;
                                    color:white">{{section.settings.textid}}</h2>
			<div class="col-xs-12 center no-gutter" style="text-align:center;text-decoration: underline;font-weight: bold;padding:0 0 13px 0">
				<a style="color: #ffcc33 !important" href="{{section.settings.urls}}">{{section.settings.SubHeading}}</a>
			</div>

          <div class="homelist col-xs-12">
            {% for link in linklists[section.settings.Menus].links  %}
            <div class="col-xs-6 col-sm-4 col-md-2 col-lg-6 no-gutter homes">
            <a href="{{ link.url }}">
              
              {{ link.title }}
           </a>
            </div>
            {% endfor %}


            <div class="clear"></div>
          </div>
                                <div class="clear"></div>
		</div>
		
      <div class="col-md-12 col-lg-8 no-gutter main_div">
        {% for block in section.blocks %}

        
          <div class="col-xs-6 col-sm-3 no-gutter hometable">
            <a href="{{block.settings.link}}">
            <img src="{{block.settings.cartimage | img_url:'master'}}">
           </a>
              </div>
       
        {% endfor %}



        <div class="clear"></div>
      </div>
		<div class="clear"></div>
	</div>
	<div class="clear"></div>
</div>
</div>
{% schema %}
  {
    "name": "Trading Card Games",
"class": "index-section section-3",
"settings": [
    {
      "type":"text",
		"id":"textid",
	"label":"Heading"
    },
	{
      "type":"text",
		"id":"SubHeading",
	"label":"SubHeading"
    },
{
      "type":"url",
		"id":"urls",
	"label":"SubHeading urls"
    },

{
   "type":      "link_list",
   "id":        "Menus",
   "label":     "Menus"
}
  ],
     "blocks": [
    {
      "type": "logo_image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "cartimage",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
          
        }
      ]
    }
  ],
"presets": [
    {
      "name": "Section three",
      "category": "Image"
      }
  ]
  }
{% endschema %}
<style>
  .homelist {
    text-align: center;
}

.homelink {
    padding: 12px;
    font-size: 20px;
    color: #fff;
}
  .section-3 .hometable img{
  width:100%;
  }
  .section-3 .hometable {
  padding-right: 0px;
    padding-left: 0px;
    border: 1px solid #000;
}
</style>