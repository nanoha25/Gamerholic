{%assign collectionName = collection.title | remove: ' &' | remove: ' All'| replace: ' ', '-'%}


<div class="side-heading extra-large-gap">
  <h2>Categories</h2>
</div>
{% for tag in collections[collectionName].tags %}
{% if tag == 'jan' or tag == 'feb' or tag == 'mar' or tag == 'apr' or tag == 'may' or tag == 'jun' or tag == 'jul' or tag == 'aug' or tag == 'sep' or tag == 'oct' or tag == 'nov' or tag == 'dec' %} 
{% else %}
<div class="side-item">
  <a class="link" href="/collections/{{collection.title | remove: ' &' | remove: ' All'| replace: ' ', '-'| downcase}}/{{tag | replace: ' ', '-' }}"><h3>{{tag}}</h3></a>
</div>
{% endif %}
{% endfor %}
