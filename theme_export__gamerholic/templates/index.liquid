
<div id="owl-main" class="owl-carousel owl-theme">
  {% for product in collections['banner-images'].products %}
  <div class="item" style="background-color:{{ product.description }}">
    <div class="container" style="margin: auto">
      <a href="{{product.title}}">
        <img src="{{product.images[0].src | product_img_url: 'master'}}" alt="{{ product.title }}">
      </a>
    </div>
  </div>
  {% endfor %}
</div>



