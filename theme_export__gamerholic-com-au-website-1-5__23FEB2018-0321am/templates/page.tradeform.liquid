    <div class="rte">
      {{ page.content }}
    </div>

    {% form 'contact' %}

        {% if form.posted_successfully? %}
          <p class="note form-success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {% endif %}

        {% include 'form-errors-custom' %}

        <div id="contactFormWrapper">
 		  <input type="text" name="contact[formType]" id="form_type" value="SELL TO US FORM" style="visibility: hidden; height:0px; margin:0px;"> 
         
          <label for="contactFormName" class="label"> Name</label>
          <input type="text" id="contactFormName" name="contact[name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
			
          <label for="contactFormEmail" class="label">Email</label>
          <input type="email" id="contactFormEmail" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
			
          <label for="contactFormPhone" class="label"> Phone</label>
          <input type="tel" id="contactFormPhone" name="contact[phone]" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
		
          <label for="contactFormCardName" class="label"> Card Name</label>
          <input type="text" name="contact[cardname]" id="card_name" >
          
          <label>Condition:</label>
  		  <select id="contactFormCondition" name="contact[condition]">
          <option value="" disabled selected>Select your option</option>
       	  <option>Damaged</option>
          <option>Played</option>
  		  <option>Light Played</option>
  		  <option>Near Mint</option>
  		  </select>
          
          <label for="contactFormName" class="label">Price</label>
          <input type="text" id="contactFormPrice" name="contact[price]" placeholder="$">
          
          <label for="contactFormName" class="label">Quantity</label>
          <input type="text" id="contactFormQuantity" name="contact[quantity]">
         
          <label for="contactFormMessage" class="label">{{ 'contact.form.message' | t }}</label>
          <textarea rows="5" id="contactFormMessage" name="contact[message]"></textarea>
          
          
          
          <input type="submit" class="btn right" value="{{ 'contact.form.send' | t }}">
        </div>

     {% endform %}
  </div>

</div>
